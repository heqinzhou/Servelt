<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>schooladd</servlet-name>
        <servlet-class>com.bjpowernode.controller.SchoolAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>schoolcheckServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.SchollCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scholfindServlet</servlet-name>
        <servlet-class>com.bjpowernode.controller.SchoolFindServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>scholfindServlet</servlet-name>
        <url-pattern>/dept/find.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>schooladd</servlet-name>
        <url-pattern>/dept/add.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>schoolcheckServlet</servlet-name>
        <url-pattern>/dept/check.do</url-pattern>
    </servlet-mapping>
</web-app>